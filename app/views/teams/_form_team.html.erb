<%= form_with(model: team, local: true) do |form| %>
  <div class="form-group">
    <h4 class="control-label">Datos del Equipo:</h4>
  </div>
  <% if team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="item form-group">
    <%= form.label :name, "Nombre de la tarea: " %>
    <div class="input-group">
      <%= form.text_field :name , {:class=> "form-control", :placeholder=>"Introduzca el nombre del Team..."}%>
    </div>
  </div>

  <div class="item form-group">
    <%= form.label :color %>
    <div class="input-group">
      <%= form.text_field :color, {:class=> "form-control", :placeholder=>"Introduzca color de Team..."} %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit :class => "btn btn-success"%>
  </div>

  
<% end %>