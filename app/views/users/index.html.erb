<h3>All Users</h3>
<br>
<%= form_tag index_user_path, method: :get do %>
  <div class="form-group">
    <%= text_field_tag :user_name, params[:user_name], placeholder: "Search User..." %>
  </div>
  <%= submit_tag "Buscar", user_name: nil, class: "btn btn-primary btn-md" %>
<% end %>


<br>
<table  class="table table-bordered">
  <thead>
    <tr  class="text-center">
      <th>Avatar</th>
      
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |u| %>
      <tr class="text-center">
       
        <% if u.avatar.attached? %>
          <td><%= image_tag u.avatar.variant(resize: "60x60" ), :class => 'rounded mx-auto d-block'%></td>
        <% end %>
        
        
        <td><%= u.user_name %></td>
        <td><%= u.email %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<div class='container align-left'>
  <%= paginate @users %>
  <br>
</div>