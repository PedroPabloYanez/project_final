<div id="layoutSidenav_content">
  <main>
    <div class="container center p-5">
      <%= form_with(model: project, remote: true) do |form| %>
        <div class="form-group">
          <h4 class="control-label">Datos del projecto:</h4>
        </div>

        <% if project.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

            <ul>
            <% project.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>



        <div class="item form-group">
          <%= form.label :name, "Nombre del Proyecto: " %>
          <div class="input-group">
            <%= form.text_field :name, {:class=> "form-control", :placeholder=>"Introduzca el nombre del projecto..."} %>
          </div>
        </div>

        <div class="item form-group">
          <%= form.label :description, "Descripción del Proyecto: " %>
          <div class="input-group">
          <%= form.text_area :description, {class: "form-control", :placeholder=>"Introduzca la descripción del proyecto..."} %>
          </div> 
        </div>

        

        <div class="item form-group">
          <%= form.label :initial_date, "Fecha Inicio: " %>
          <div class=" form-control">
            <%= form.date_select :initial_date, prompt: true %>
          </div>
        </div>

        <div class="item ">
          <%= form.label :finish_date, "Fecha Término: "%>
          <div class=" form-control">
            <%= form.date_select :finish_date, prompt: true %>
          </div>
        </div>
        
        <div class="item form-group">
          <%= form.label :team_id %>
          <div class="input-group">
            <%= form.collection_select(:team_id, Team.all, :id, :name, {:prompt => 'Seleccione un team'}, {class: "form-control"}) %>
          </div>
        </div>

        <div  class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
          <%= form.submit :class => "btn btn-success" %>
        </div>
      <% end %>
    </div>
	</main>
</div>