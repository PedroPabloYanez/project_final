<h1 class="h3 mb-2 text-gray-800">Projects</h1>
<hr>
<div>  
  <%= link_to new_project_path, {remote: true, class: 'button is-small'} do %>
		<span class="icon is-small has-text-link"><i class="fa fa-plus"></i></span>
	<% end %>
</div>
<br>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name Project</th>
            <th>Team</th>
            <th>Description</th>
            <th>Initial Date</th>
            <th>Finish Date</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody id="newProject">
          <% @projects.each do |project| %>
            <%= render 'projects/project', project: project %> 
          <% end %>
        </tbody>
      </table>
 

<br>

<%= render 'modal_projects' %>


