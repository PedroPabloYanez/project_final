<% if Payment.has_payment?(current_user).present? %>
<h1 class="h3 mb-2 text-gray-800">Projects</h1>
<hr>
<div>  
  <%= link_to new_project_path, {remote: true} do %>
		<i class="fas fa-plus-square fa-2x icon-plus"></i>
	<% end %>
</div>
<br>

<%= form_tag projects_path, method: :get do %>
  <div class="form-group">
    <%= text_field_tag :name, params[:name], placeholder: "Search Project..." %>
  </div>
  <%= submit_tag "Buscar", name: nil, class: "btn btn-primary btn-md" %>
<% end %>

<br>
      <table class="table table-bordered">
        <thead>
          <tr class="text-center table-primary">
            <th>Name Project</th>
            <th>Team</th>
            <th>Description</th>
            <th>Initial Date</th>
            <th>Finish Date</th>
            <th>Days to complete</th>
            <th>Status</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody id="newProject">
          <% @projects.each do |project| %>
            <%= render 'projects/project', project: project %> 
          <% end %>
        </tbody>
      </table>
 

<br>

<%= render 'modal_projects' %>
<% else %>
	<h1 class="text-center">Pagar para entrar en APP</h1>
	<br>
	<h4 class="text-center">Haz seguimiento a tus proyectos</h4>
	<%= link_to 'Paga con MercadoPago', mercado_pago_path, class:"position-absolute top-50 start-50 translate-middle-x-y text-decoration-none  rounded-pill btn-lg MercadoPago" %>
<% end %>

