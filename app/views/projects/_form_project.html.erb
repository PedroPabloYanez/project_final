<%= form_with(model: project, local: true) do |form| %>
    <div class="form-group">
        <h4 class="control-label">Datos del projecto:</h4>
    </div>

    <% if project.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
            <ul>
                <% project.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="item form-group">
        <%= form.label :name, "Nombre del Proyecto: " %>
          <div class="input-group">
            <%= form.text_field :name, {:class=> "form-control", :placeholder=>"Introduzca el nombre del projecto..."} %>
          </div>
    </div>

    <div class="item form-group">
        <%= form.label :description, "Descripción del Proyecto: " %>
            <div class="input-group">
                <%= form.text_area :description, {class: "form-control", :placeholder=>"Introduzca la descripción del proyecto..."} %>
            </div> 
    </div>

    <div class="item form-group">
        <%= form.label :initial_date, "Fecha Inicio: " %>
            <div class=" input-group">
                <%= form.date_select :initial_date, prompt: true %>
            </div>
    </div>

    <div class="item form-group">
        <%= form.label :finish_date, "Fecha Término: "%>
            <div class=" input-group">
                <%= form.date_select :finish_date, prompt: true %>
            </div>
    </div>
        
    <div class="item form-group">
        <%= form.label :team_id %>
            <div class="input-group">
                <%= form.collection_select(:team_id, Team.all, :id, :name, {:prompt => 'Seleccione un team'}, {class: "form-control"}) %>
            </div>
    </div>

    <div class="item form-group">
        <%= form.label :status %>
        <div class="input-group">
            <%= form.select(:status, Project.statuses.keys.to_a, {:prompt => 'Selecciona status'}, {class: "form-control"})  %>
        </div>
    </div>

    <div  class="actions">
        <%= form.submit :class => "btn btn-success" %>
    </div>
<% end %>
   